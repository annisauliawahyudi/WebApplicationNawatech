@model WebApplicationNawatech.ViewModels.EditProfileViewModel

<h2 class="mb-4 text-primary">Edit Profile</h2>

<div class="card shadow rounded p-4 w-50 mx-auto">
    <form asp-action="EditProfile" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-bold">Nama</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ProfilePicture" class="form-label fw-bold">Foto Profil</label>
            <input asp-for="ProfilePicture" type="file" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
